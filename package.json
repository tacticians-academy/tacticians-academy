{
	"name": "tacticians-academy",
	"version": "0.1.0",
	"license": "ISC",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview"
	},
	"dependencies": {
		"@tacticians-academy/academy-library": "^0.22.3",
		"@tailwindcss/forms": "^0.5.1",
		"@vitejs/plugin-vue": "^2.3.2",
		"tailwindcss": "^3.0.24",
		"vite": "^2.9.8",
		"vue": "^3.2.33",
		"vue-router": "^4.0.15"
	},
	"devDependencies": {
		"@ky-is/eslint-config": "^2.5.1",
		"@types/node": "^17.0.31",
		"@vue/eslint-config-typescript": "^10.0.0",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.15.0",
		"eslint-plugin-vue": "^8.7.1",
		"node-fetch": "^3.2.4",
		"postcss": "^8.4.13",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4",
		"vue-tsc": "^0.34.11"
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/vue-typescript",
		"parserOptions": {
			"sourceType": "module",
			"project": [
				"tsconfig.eslint.json"
			]
		},
		"rules": {
			"@typescript-eslint/strict-boolean-expressions": "error",
			"vue/component-tags-order": [
				"error",
				{
					"order": [
						[
							"script",
							"template"
						],
						"style"
					]
				}
			],
			"vue/html-indent": [
				"error",
				"tab",
				{
					"baseIndent": 0
				}
			],
			"vue/no-v-html": "off"
		}
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {
				"config": "tailwind.config.ts"
			}
		}
	}
}
